{
  "name": "nodejs_final_project",
  "version": "1.0.0",
  "description": "Final nodejs project by Guy Cohen, Baruch Ilyayev, Michael Chernyak.",
  "license": "ISC",
  "author": "Guy Cohen, Baruch Ilyayev, Michael Chernyak.",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev:users": "nodemon users_app.js",
    "dev:costs": "nodemon costs_app.js",
    "dev:logs": "nodemon logs_app.js",
    "dev:about": "nodemon about_app.js",
    "dev": "concurrently \"npm run dev:logs\" \"npm run dev:users\" \"npm run dev:costs\" \"npm run dev:about\"",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "body-parser": "^2.2.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "mongoose": "^9.0.2",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "globalTeardown": "<rootDir>/tests/teardown.js",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "models/**/*.js",
      "utils/**/*.js",
      "!node_modules/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
